{
  "compileOnSave": true,
  "compilerOptions": {
    "rootDirs": ["src"],
    "module": "esnext",
    // "noImplicitAny": true,
    "outDir": "./dist/", //["dist"] <--- apollo setup docs
    "target": "es2017",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["es2020", "dom"],
    "types": ["node"]
  },
  "include": ["src/**/*"]
}
